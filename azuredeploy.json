{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The name of the database account and web app you want to create. Must be unique."
      }
    },
    "secondaryLocation": {
      "type": "string",
      "defaultValue": "West Europe",
      "metadata": {
        "description": "The name of the secondary location (or leave blank to skip)."
      }
    },
    "3rdLocation": {
      "type": "string",
      "defaultValue": "West Europe",
      "metadata": {
        "description": "The name of the 3rd location (or leave blank to skip)."
      }
    },
    "4thLocation": {
      "type": "string",
      "defaultValue": "West Europe",
      "metadata": {
        "description": "The name of the 4th location (or leave blank to skip)."
      }
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "S1",
      "metadata": {
        "description": "Must be minimum S1 if using Azure Traffic Manager."
      }
    }
  },
  "variables": {
    "siteName": "[toLower(parameters('siteName'))]",
    "siteLocation": "[resourceGroup().location]",
    "webAppPrimaryName": "[concat(variables('siteName'), '-', replace(variables('siteLocation'), ' ', '-'))]",
    "webAppSecondaryName": "[concat(variables('siteName'), '-', replace(parameters('secondaryLocation'), ' ', '-'))]",
    "webApp3rdName": "[concat(variables('siteName'), '-', replace(parameters('3rdLocation'), ' ', '-'))]",
    "webApp4thName": "[concat(variables('siteName'), '-', replace(parameters('4thLocation'), ' ', '-'))]",
    "createSecondaryLocation": "[and(greater(length(parameters('secondaryLocation')), 0), not(equals(variables('siteLocation'), parameters('3rdLocation'))))]",
    "create3rdLocation": "[and(greater(length(parameters('3rdLocation')), 0), not(equals(variables('siteLocation'), parameters('secondaryLocation'))))]",
    "create4thLocation": "[and(greater(length(parameters('4thLocation')), 0), not(equals(variables('siteLocation'), parameters('4thLocation'))))]",
    "repoUrl": "https://github.com/kamilkonderak/Planetzine",
    "branch": "master",

    "cosmosDbLocations1": [
      {
        "locationName": "[variables('siteLocation')]",
        "failoverPriority": 0
      }
    ],
    "cosmosDbLocations2": [
      {
        "locationName": "[variables('siteLocation')]",
        "failoverPriority": 0
      },
      {
        "locationName": "[parameters('secondaryLocation')]",
        "failoverPriority": 1
      },
      {
        "locationName": "[parameters('3rdLocation')]",
        "failoverPriority": 2
      },
      {
        "locationName": "[parameters('4thLocation')]",
        "failoverPriority": 3
      }
    ],
    "cosmosDbLocations": "[if(variables('createSecondaryLocation'), variables('cosmosDbLocations2'), variables('cosmosDbLocations1'))]"
  },
  "resources": [
    {
      "name": "[variables('siteName')]",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "kind": "GlobalDocumentDB",
      "apiVersion": "2015-04-08",
      "tags": {
        "defaultExperience": "DocumentDB"
      },
      "location": "[variables('siteLocation')]",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session",
          "maxIntervalInSeconds": 5,
          "maxStalenessPrefix": 100
        },
        "locations": "[variables('cosmosDbLocations')]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[variables('webAppPrimaryName')]",
      "location": "[variables('siteLocation')]",
      "sku": {
        "name": "[parameters('appServicePlanSku')]",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/Sites",
      "apiVersion": "2015-08-01",
      "name": "[variables('webAppPrimaryName')]",
      "location": "[variables('siteLocation')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('webAppPrimaryName'))]"
      ],
      "properties": {
        "name": "[variables('webAppPrimaryName')]",
        "serverFarmId": "[variables('webAppPrimaryName')]",
        "siteConfig": {
          "phpVersion": "off",
          "appSettings": [
            {
              "Name": "EndpointURL",
              "Value": "[reference(concat('Microsoft.DocumentDb/databaseAccounts/', variables('siteName'))).documentEndpoint]"
            },
            {
              "Name": "AuthKey",
              "Value": "[listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('siteName')), '2015-04-08').primaryMasterKey]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "web",
          "type": "sourcecontrols",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppPrimaryName'))]"
          ],
          "properties": {
            "RepoUrl": "[variables('repoUrl')]",
            "branch": "[variables('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[variables('webAppSecondaryName')]",
      "location": "[parameters('secondaryLocation')]",
      "condition": "[variables('createSecondaryLocation')]",
      "sku": {
        "name": "[parameters('appServicePlanSku')]",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/Sites",
      "apiVersion": "2015-08-01",
      "name": "[variables('webAppSecondaryName')]",
      "location": "[parameters('secondaryLocation')]",
      "condition": "[variables('createSecondaryLocation')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('webAppSecondaryName'))]"
      ],
      "properties": {
        "name": "[variables('webAppSecondaryName')]",
        "serverFarmId": "[variables('webAppSecondaryName')]",
        "siteConfig": {
          "phpVersion": "off",
          "appSettings": [
            {
              "Name": "EndpointURL",
              "Value": "[reference(concat('Microsoft.DocumentDb/databaseAccounts/', variables('siteName'))).documentEndpoint]"
            },
            {
              "Name": "AuthKey",
              "Value": "[listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('siteName')), '2015-04-08').primaryMasterKey]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "web",
          "type": "sourcecontrols",
          "apiVersion": "2015-08-01",
          "condition": "[variables('createSecondaryLocation')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppSecondaryName'))]"
          ],
          "properties": {
            "RepoUrl": "[variables('repoUrl')]",
            "branch": "[variables('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[variables('webApp3rdName')]",
      "location": "[parameters('3rdLocation')]",
      "condition": "[variables('createSecondaryLocation')]",
      "sku": {
        "name": "[parameters('appServicePlanSku')]",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/Sites",
      "apiVersion": "2015-08-01",
      "name": "[variables('webApp3rdName')]",
      "location": "[parameters('3rdLocation')]",
      "condition": "[variables('createSecondaryLocation')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('webApp3rdName'))]"
      ],
      "properties": {
        "name": "[variables('webApp3rdName')]",
        "serverFarmId": "[variables('webApp3rdName')]",
        "siteConfig": {
          "phpVersion": "off",
          "appSettings": [
            {
              "Name": "EndpointURL",
              "Value": "[reference(concat('Microsoft.DocumentDb/databaseAccounts/', variables('siteName'))).documentEndpoint]"
            },
            {
              "Name": "AuthKey",
              "Value": "[listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('siteName')), '2015-04-08').primaryMasterKey]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "web",
          "type": "sourcecontrols",
          "apiVersion": "2015-08-01",
          "condition": "[variables('createSecondaryLocation')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webApp3rdName'))]"
          ],
          "properties": {
            "RepoUrl": "[variables('repoUrl')]",
            "branch": "[variables('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[variables('webApp4thName')]",
      "location": "[parameters('4thLocation')]",
      "condition": "[variables('createSecondaryLocation')]",
      "sku": {
        "name": "[parameters('appServicePlanSku')]",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/Sites",
      "apiVersion": "2015-08-01",
      "name": "[variables('webApp4thName')]",
      "location": "[parameters('4thLocation')]",
      "condition": "[variables('createSecondaryLocation')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('webApp4thName'))]"
      ],
      "properties": {
        "name": "[variables('webApp4thName')]",
        "serverFarmId": "[variables('webApp4thName')]",
        "siteConfig": {
          "phpVersion": "off",
          "appSettings": [
            {
              "Name": "EndpointURL",
              "Value": "[reference(concat('Microsoft.DocumentDb/databaseAccounts/', variables('siteName'))).documentEndpoint]"
            },
            {
              "Name": "AuthKey",
              "Value": "[listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('siteName')), '2015-04-08').primaryMasterKey]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "web",
          "type": "sourcecontrols",
          "apiVersion": "2015-08-01",
          "condition": "[variables('createSecondaryLocation')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webApp4thName'))]"
          ],
          "properties": {
            "RepoUrl": "[variables('repoUrl')]",
            "branch": "[variables('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    },
    {
      "apiVersion": "2017-05-01",
      "type": "Microsoft.Network/trafficManagerProfiles",
      "name": "[variables('siteName')]",
      "location": "global",
      "condition": "[variables('createSecondaryLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('webAppPrimaryName'))]",
        "[resourceId('Microsoft.Web/sites', variables('webAppSecondaryName'))]",
        "[resourceId('Microsoft.Web/sites', variables('webApp3rdName'))]",
        "[resourceId('Microsoft.Web/sites', variables('webApp4thName'))]"
      ],
      "properties": {
        "profileStatus": "Enabled",
        "trafficRoutingMethod": "Performance",
        "dnsConfig": {
          "relativeName": "[variables('siteName')]",
          "ttl": 30
        },
        "monitorConfig": {
          "protocol": "HTTP",
          "port": 80,
          "path": "/"
        },
        "endpoints": [
          {
            "name": "[variables('webAppPrimaryName')]",
            "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
            "properties": {
              "endpointStatus": "Enabled",
              "targetResourceId": "[resourceId('Microsoft.Web/sites', variables('webAppPrimaryName'))]"
            }
          },
          {
            "name": "[variables('webAppSecondaryName')]",
            "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
            "condition": "[variables('createSecondaryLocation')]",
            "properties": {
              "endpointStatus": "Enabled",
              "targetResourceId": "[resourceId('Microsoft.Web/sites', variables('webAppSecondaryName'))]"
            }
          },
          {
            "name": "[variables('webApp3rdName')]",
            "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
            "condition": "[variables('createSecondaryLocation')]",
            "properties": {
              "endpointStatus": "Enabled",
              "targetResourceId": "[resourceId('Microsoft.Web/sites', variables('webApp3rdName'))]"
            }
          },
          {
            "name": "[variables('webApp4thName')]",
            "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
            "condition": "[variables('createSecondaryLocation')]",
            "properties": {
              "endpointStatus": "Enabled",
              "targetResourceId": "[resourceId('Microsoft.Web/sites', variables('webApp4thName'))]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}